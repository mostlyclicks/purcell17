<ul>
  <% if ::Refinery::Clients::Admin::ClientsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.clients_admin_clients_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_clients_admin_client_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Clients::Admin::ClientsController.sortable? && ::Refinery::Clients::Client.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.clients_admin_clients_path,
                     t('.reorder', what:  "Clients"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.clients_admin_clients_path,
                      t('.reorder_done', what: "Clients"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
