<% content_for :body do %>
  <div class='contacts'>
    <%=raw @page.content_for(Refinery::Pages.default_parts.first[:slug].to_sym) %>

    <%= form_for [refinery, :contacts, @contact] do |f| %>
    
      <%= render '/refinery/admin/error_messages',
                 :object => @contact,
                 :include_object_name => true  %>

      <div class='field name_field string_field form-group'>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class='field email_field string_field form-group'>
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>

      <div class='field message_field text_field form-group'>
        <%= f.label :message %>
        <%= f.text_area :message, :rows => 8, class: 'form-control' %>
      </div>

      <div class='actions'>
        <%= f.submit t('.send'), class: 'btn btn-warning' %>
      </div>
    <% end %>
  </div>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-md-1" id="left-col">
      
    </div>
    <div class="col-md-8" id="main-col"> 
      <%= render '/refinery/content_page' %>
    </div>
    <div class="col-md-3" id="address">
      <%= render '/refinery/pages/sidebar' %>
    </div>
  </div>
</div>

