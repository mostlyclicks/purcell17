<%= render 'refinery/admin/search_header', :url => refinery.contacts_admin_contacts_path %>
<% if searching? %>
  <% if @contacts.any? %>
    <ul>
      <%= render :partial => 'contact', :collection => @contacts %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_contacts.any? -%>
    <% @grouped_contacts.each do |container| %>
      <h3><%= l((contact_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'contact', :collection => contact_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_contacts', :scope => 'refinery.contacts.admin.contacts.index') %></strong>
    </p>
  <% end -%>
<% end %>
