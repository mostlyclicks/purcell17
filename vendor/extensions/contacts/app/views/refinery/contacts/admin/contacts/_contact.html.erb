<li class='clearfix record <%= cycle("on", "on-hover") %>'>
  <span class='title'>
    <%= link_to contact.name, refinery.contacts_admin_contact_path(contact) %> <%= t('.said') %>
    <span class="preview"><%= truncate(strip_tags(sanitize(contact.message)), :length => 60) -%></span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag('delete.png'), refinery.contacts_admin_contact_path(contact),
                :class => "cancel confirm-delete",
                :title => t('.delete_contact'),
                :'data-confirm' => t('shared.admin.delete.message', :title => contact.name),
                :'data-method' => "delete" -%>

    <%= link_to refinery_icon_tag('zoom.png'), refinery.contacts_admin_contact_path(contact),
                :title => t('.read_contact') -%>
  </span>
</li>
