<div class="container">
	<div class="row">
		<div class="col-md-1" id="left-col">
			
		</div>
		<div class="col-md-8" id="main-col"> 

		<% @clients.each do |c| %>
			<div class="row">
				<div class="col-md-8">
					<h2><%= c.name %></h2>
					<p>
						<strong><%= c.job_title %></strong><br>
						<%= c.company %>
						<% if c.city.present? && c.state.present? %>
						 	– <%= c.city %>, <%= c.state %>
						<% end %>
					</p>
					<%= raw c.body %>
				</div>
				<div class="col-md-4"><%= image_tag c.photo.url, class: 'img-responsive', style: 'margin-top:70px;' %></div>
			</div>
		<% end %>
			<div class="row">
				<div class="col-md-12">
					<%= raw @page.content_for(:worked_for) %>
				</div>
			</div>
		</div>
		<div class="col-md-3" id="address">
			<%= render 'sidebar' %>
		</div>
	</div>
</div>